<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.pojo.WmlAdvertisement" table="wml_advertisement" dynamic-insert="true"  catalog="wml_test">
        <id name="id" type="java.lang.Integer">
            <column name="id" length="14" not-null="true"/>
            	<generator class="identity"></generator>
        </id>
        <property name="createDate" type="java.lang.String">
            <column name="createDate" length="20" />
        </property>
        <property name="description" type="java.lang.String">
            <column name="description" length="255" />	
        </property>
        <property name="name" type="java.lang.String">
            <column name="name" length="255" />
        </property>
        <property name="productId" type="java.lang.Integer">
            <column name="productId" length="11" />
        </property>
        <property name="productName" type="java.lang.String"
			insert="false" update="false">
			<formula>
				(select e.name from wml_product  e where e.id=productId and e.isDel=1)
        	</formula>
		</property>
        <property name="url" type="java.lang.String">
            <column name="url" length="255" />
        </property>
           <property name="isDel" type="java.lang.Integer">
            <column name="isDel" length="11" />
        </property>
    </class>
</hibernate-mapping>
